<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
    <!-- App Sandbox is DISABLED for browser automation compatibility -->
    <!-- Browser automation requires spawning Chromium processes which need unrestricted access to Mach ports -->
    <!-- Without this, Chromium fails with: "bootstrap_check_in org.chromium.Chromium.MachPortRendezvousServer: Permission denied" -->
    <key>com.apple.security.app-sandbox</key>
    <false/>

    <!-- Allow microphone access for voice input -->
    <key>com.apple.security.device.audio-input</key>
    <true/>

    <!-- Allow camera access if needed -->
    <key>com.apple.security.device.camera</key>
    <true/>

    <!-- Allow executing JIT-compiled code (required for browser automation) -->
    <key>com.apple.security.cs.allow-jit</key>
    <true/>

    <!-- Allow unsigned executable memory (required for Python/browser automation) -->
    <key>com.apple.security.cs.allow-unsigned-executable-memory</key>
    <true/>

    <!-- Allow loading of dylibs (Python extensions and browser drivers need this) -->
    <key>com.apple.security.cs.allow-dyld-environment-variables</key>
    <true/>

    <!-- Disable library validation to allow loading bundled Python and its modules -->
    <key>com.apple.security.cs.disable-library-validation</key>
    <true/>
</dict>
</plist>
